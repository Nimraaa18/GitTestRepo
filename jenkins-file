pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout(
                    scm: [
                        $class: 'GitSCM', 
                        branches: [[name: 'main']], 
                        doGenerateSubmoduleConfigurations: false, 
                        extensions: [], 
                        submoduleCfg: [], 
                        userRemoteConfigs: [[url: 'https://github.com/Nimraaa18/GitTestRepo.git']]
                    ]
                )
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application'
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests'
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application'
                
            }
        }
    }

    post {
        success {
            echo 'Build and test succeeded.'
            
        }
        failure {
            echo 'Build or test failed.'
            
        }
    }
}
